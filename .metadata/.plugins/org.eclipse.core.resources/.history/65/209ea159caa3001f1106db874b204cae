#ifndef INC_ALARM_H_
#define INC_ALARM_H_

#include "main.h"
#include "clock.h"
#include "buzzer.h"

typedef struct _alarmSet {
	uint8_t hour;
	uint8_t minute;
	uint8_t enabled;
} alarmSet;

typedef struct _alarmSt {
	alarmSet set[5];
	uint8_t select;
} alarmSt;

void selectAlarm();
void alarmTrigger();
void returnToPreviousMode();
uint8_t getTriggerd();
void setTriggerd(uint8_t set);
uint8_t getSelect();
void setSelect(uint8_t s);
uint8_t getAlarmEnabled(int num);
void setAlarmEnabled(uint8_t enable, int num);

#endif /* INC_ALARM_H_ */
