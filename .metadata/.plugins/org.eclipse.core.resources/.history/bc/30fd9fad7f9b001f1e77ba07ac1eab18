#ifndef INC_CLOCK_H_
#define INC_CLOCK_H_

#include "main.h"
#include <stdio.h>
#include "7SEG.h"
#include "CLCD.h"

#define YEAR		300
#define MONTH		2
#define DATE		28
#define HOUR		23
#define MINUTE		59
#define SECOND		0

typedef enum _amPm {
	AM = 0,
	PM
} amPm;

typedef struct _clockSt {
		int year;
		int month;
		int date;
		int hour;
		int minute;
		int second;
		int millisecond;
		uint8_t leafYear;		// 윤년 판별변수 1이면 윤년 0이면 평년
		uint8_t thiryMonth;		// 말일이 30일인지 판별하는 변수 1이면 30일
		uint8_t decimalPoint;	// 소수점 표시 변수
		uint8_t timeFormet; 	// 12h/24h 설정변수 1이면 24, 0이면 12
		uint8_t buffer[20];			// clcd 출력용 버퍼
} clockSt;

void startClock();
void clcdDisplayClock();
void tickClock();
int leapYearCalculator(int year);
int isThirtyDays(int month);
#endif /* INC_CLOCK_H_ */
